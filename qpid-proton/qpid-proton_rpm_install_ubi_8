#Steps to install various qpid-proton packages using RPMs

#Install qpid-proton-c packages
dnf -y install https://kojipkgs.fedoraproject.org//packages/qpid-proton/0.30.0/2.el8/ppc64le/qpid-proton-c-0.30.0-2.el8.ppc64le.rpm
dnf -y install https://kojipkgs.fedoraproject.org//packages/qpid-proton/0.30.0/2.el8/ppc64le/qpid-proton-c-devel-0.30.0-2.el8.ppc64le.rpm

#Enable EPEL
dnf -y install https://dl.fedoraproject.org/pub/epel/epel-release-latest-8.noarch.rpm
dnf -y install jsoncpp-devel

#Install qpid-proton-cpp packages
dnf -y install https://kojipkgs.fedoraproject.org//packages/qpid-proton/0.30.0/2.el8/ppc64le/qpid-proton-cpp-0.30.0-2.el8.ppc64le.rpm
dnf -y install https://kojipkgs.fedoraproject.org//packages/qpid-proton/0.30.0/2.el8/ppc64le/qpid-proton-cpp-devel-0.30.0-2.el8.ppc64le.rpm

#Install python3-qpid-proton package
dnf -y install https://kojipkgs.fedoraproject.org//packages/qpid-proton/0.30.0/2.el8/ppc64le/python3-qpid-proton-0.30.0-2.el8.ppc64le.rpm

