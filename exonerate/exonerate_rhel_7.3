## Update Source
sudo yum update -y

#gcc dev tools
sudo yum groupinstall 'Development Tools' -y

## install deppendencies
sudo yum install zlib-1.2.7-17.el7.ppc64le -y
sudo yum install glibc-2.17-157.el7.ppc64le -y
sudo yum install libgcc-4.8.5-11.el7.ppc64le -y
sudo yum install glib* -y

# download and unpack
wget http://ftp.ebi.ac.uk/pub/software/vertebrategenomics/exonerate/exonerate-2.2.0.tar.gz
tar -xzvf exonerate-2.2.0.tar.gz
cd exonerate-2.2.0

# make
./configure --build=ppc64le
make
sudo make install
